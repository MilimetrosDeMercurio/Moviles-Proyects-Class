<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/small_gap"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_nombre_de_pokemon"
        android:textAllCaps="true" />
    <EditText
        android:id="@+id/et_pokemon_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/text_hint_pokemon_name"/>
    <Button
        android:id="@+id/bn_action_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_enviar"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/small_gap"/>
    <TextView
        android:id="@+id/tv_display_pokemon"
        android:layout_marginTop="@dimen/big_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>